//- We are getting access to this 'user' variable as we put it in the res.locals inside the isLoggedIn middleware
header.header 
    nav.nav.nav--tours 
        a(href="/").nav__el All tours
    .header__logo
        img(src="/img/logo-white.png" alt="Natours logo")
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Log out
            a.nav__el(href="/me") 
                img.nav__user-img(src= `/img/users/${user.photo}` alt="User photo") 
                span= user.name.split(' ')[0]
        else
            a(href='/login').nav__el Log in
            a(href='/signup').nav__el.nav__el--cta Sign up